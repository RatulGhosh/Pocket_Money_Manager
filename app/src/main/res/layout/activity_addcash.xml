<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/bgh"
    tools:context="com.example.bana.pocketmoneymanager.Addcash"
    android:id="@+id/addcash2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#29fffc"
        android:background="#27ff43"
        android:id="@+id/addcash1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/addcshmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff08d3"
            android:textStyle="bold"
            android:backgroundTint="#4c3dff"
            android:text="add cash"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/icon" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="340dp"
            android:src="@drawable/icon"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Here you can add cash in your wallet which will be added in your current balance"
        android:id="@+id/textView2"
        android:layout_below="@+id/addcash1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:width="300dp"
        android:height="150dp"
        android:textColor="#19ff50"
        android:textSize="28dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="10dp"
        android:width="300dp"
        android:height="60dp"
        android:background="#fbffc0"
        android:hint="Add amount" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btcash"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:text="ADD CASH"
        android:textSize="30dp"
        android:layout_marginTop="2dp"
        android:width="180dp"
        android:height="30dp"
        android:background="#2bff49"
        android:onClick="update"/>

</RelativeLayout>
