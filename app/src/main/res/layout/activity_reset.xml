<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bgh"
    tools:context="com.example.bana.pocketmoneymanager.reset"
    android:id="@+id/resetlayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#29fffc"
        android:background="#27ff43"
        android:id="@+id/addcash1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/addcshmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ff08d3"
            android:textStyle="bold"
            android:backgroundTint="#4c3dff"
            android:text="Reset"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/icon" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="340dp"
            android:src="@drawable/icon"/></RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do You Want to RESET!!!!"
        android:id="@+id/textView3"
        android:layout_below="@+id/addcash1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:width="280dp"
        android:height="90dp"
        android:textSize="30dp"
        android:textColor="#19ff50"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:onClick="reset"
        android:id="@+id/button2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:width="130dp"
        android:background="#2bff49"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:width="130dp"
        android:onClick="donot_reset"
        android:background="#2bff49"/>
</RelativeLayout>
