<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/bgh"
    tools:context="com.example.bana.pocketmoneymanager.About">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="#40ff4f"
        android:background="#ff2b2f"
        android:id="@+id/relativeLayout1">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="22dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#fff"
            android:textStyle="bold"
            android:backgroundTint="#4c3dff"
            android:text="ABOUT APP"
            android:layout_alignTop="@+id/imageView1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/icon" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="340dp"
            android:src="@drawable/icon" />
        ></RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main aim of this app is to manage your pocket money. When our wallet cash is about to finish we start thinking how i spend money then i do not realise how i spend my money so this app will help us to keep a record of our expenditure
        Developer- Ajay Saini, Ujjain Bana"
        android:id="@+id/textView4"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:width="300dp"
        android:height="300dp"
        android:textSize="25dp"
        android:textColor="#0d0fff" />
</RelativeLayout>
